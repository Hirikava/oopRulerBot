<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Autofac" Version="6.4.0" />
      <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="8.0.0" />
      <PackageReference Include="Discord.Net" Version="3.8.1" />
      <PackageReference Include="Google.Apis.Auth" Version="1.58.0-beta01" />
      <PackageReference Include="MailKit" Version="3.4.2" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.2-beta2" />
      <PackageReference Include="Opus" Version="1.0.0" />
      <PackageReference Include="System.Runtime.Caching" Version="7.0.0-rc.2.22472.3" />
      <PackageReference Include="Telegram.Bot" Version="18.0.0" />
      <PackageReference Include="Vostok.Configuration" Version="0.1.42" />
      <PackageReference Include="Vostok.Configuration.Abstractions" Version="0.1.15" />
      <PackageReference Include="Vostok.Configuration.Sources.Json" Version="0.1.6" />
      <PackageReference Include="Vostok.Logging.Console" Version="1.0.9" />
      <PackageReference Include="Vostok.Logging.File" Version="1.0.22" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Settings\secrets.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="configuration.txt">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
